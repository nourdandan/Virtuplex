<Window x:Class="Virtuplex.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Virtuplex"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Left" Width="350">
            <Label>File Input Location:</Label>
            <TextBox Name="tbFileInput" Width="300" MaxLength="100" />
            <Label Foreground="Red" Name="lblInputMsg" ></Label>
            <Label>File Output Direcroty:</Label>
            <TextBox Name="tbFileOutput" Width="300" MaxLength="100" />
            <Label Foreground="Red" Name="lblOutputMsg" ></Label>
            <Label>File Name:</Label>
            <TextBox Name="tbFileName" Width="300" MaxLength="100" />
            <Button Name="btn1"  Click="OnClick1" Margin="100,10,0,0" Width="100">Calculate</Button>
            <TextBox AcceptsReturn="True" x:Name="tbAlternativeInput" Margin="00,20,0,0" Width="250" Height="100"/>
        </StackPanel>
        <StackPanel HorizontalAlignment="Right" Width="500">
            <TextBox Name="tbOutputText" Margin="30,20,0,0" Width="300" Height="250"></TextBox>
        </StackPanel>
    </Grid>
</Window>
